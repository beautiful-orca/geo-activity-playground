{% extends "page.html.j2" %}

{% block container %}
<h1 class="mb-3">Eddington Number</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <h2>Definition</h2>

        <p>Your Eddington number is {{ eddington_number }}.</p>

        <p>That means that on {{ eddington_number }} separate days you
            have recorded activities exceeding {{ eddington_number }} km.</p>
    </div>

    <div class="col-md-8">
        <h2>Missing days</h2>

        <table class="table">
            <thead>
                <tr>
                    <th>Distance / km</th>
                    <th>Count</th>
                    <th>Missing days</th>
                </tr>
            </thead>
            <tbody>
                {% for row in eddington_table %}
                <tr>
                    <td>{{ row['distance_km'] }}</td>
                    <td>{{ row['total'] }}</td>
                    <td>{{ row['missing'] }}</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row mb-1">
    <div class="col">
        <h2>Plot</h2>

        {{ vega_direct("eddington-log", logarithmic_plot) }}
    </div>
</div>
{% endblock %}